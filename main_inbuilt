from decimal import *
from builtins import *





def f(a):
    a=Decimal(a)
    return (a-Decimal(math.sin(a))-Decimal((math.pi/2)))
a=bisection(f, 0, 10)
print(a)

try:
    r=float(input("Enter Radius: "))
    l = 2*r*(1-(math.cos(a/2)))
