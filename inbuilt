import math


def checkSign(a, b):
        return a * b > 0

def bisection(function, negative, positive):
    

    assert not checkSign(function(negative), function(positive))

    for i in range(100):
        midpoint = (negative + positive) / 2.0
        if checkSign(function(negative), function(midpoint)):
            negative = midpoint
        else:
            positive = midpoint

    return midpoint
